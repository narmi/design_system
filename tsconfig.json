{
  "compilerOptions": {
    "outFile": "./dist/types/index",
    "target": "ES6",
    "lib": ["ES2022", "dom"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
