{
  "compilerOptions": {
    "outFile": "./dist/types/index",
    "target": "ES5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
